<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/d_16dp"
    android:background="@android:color/holo_green_dark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_8dp"
        android:gravity="center"
        android:text="Hello Linkan"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_8dp"
        android:layout_toRightOf="@id/tv_first"
        android:text="Hello Brother"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_second"
        android:layout_margin="@dimen/d_8dp"
        android:layout_toLeftOf="@id/tv_first"
        android:text="Hello Geeta"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_first"
        android:layout_margin="@dimen/d_8dp"
        android:text="Hello Suraj"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_seventh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_second"
                android:layout_margin="@dimen/d_8dp"
                android:layout_toLeftOf="@id/tv_first"
                android:text="Hello Geeta"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d_8dp"
                android:gravity="center"
                android:text="Hello Linkan"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_sixth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d_8dp"
                android:layout_toRightOf="@id/tv_first"
                android:text="Hello Brother"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_first"
            android:layout_margin="@dimen/d_8dp"
            android:text="Hello Suraj"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>